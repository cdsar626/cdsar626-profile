---
import ProjectTooltip from './ProjectTooltip.astro';

export interface Props {
  title: string;
  description: string;
  technologies: string[];
  thumbnail: string;
  links: {
    main?: string;
    github?: string;
    additional?: string;
  };
  featured?: boolean;
}

const { title, description, technologies, thumbnail, links, featured = false } = Astro.props;
---

<article 
  class="project-card" 
  data-featured={featured}
  role="article"
  aria-labelledby={`project-title-${title.replace(/\s+/g, '-').toLowerCase()}`}
  tabindex="0"
>
  <div class="project-card__thumbnail">
    <img 
      src={thumbnail} 
      alt={`Screenshot of ${title} project showing the main interface`}
      loading="lazy"
      class="project-card__image"
    />
    <div class="project-card__overlay" aria-hidden="true">
      {/* Main link covering entire card */}
      {links.main && (
        <a 
          href={links.main} 
          class="project-card__link project-card__link--main"
          aria-label={`View ${title} project details and live demo`}
          target="_blank"
          rel="noopener noreferrer"
          tabindex="-1"
        >
          <span class="sr-only">View Project</span>
        </a>
      )}
      
      {/* Corner links */}
      <div class="project-card__corner-links">
        {links.github && (
          <a 
            href={links.github} 
            class="project-card__link project-card__link--github"
            aria-label={`View ${title} source code on GitHub`}
            target="_blank"
            rel="noopener noreferrer"
            tabindex="-1"
          >
            <svg class="project-card__icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true" focusable="false">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        )}
        {links.additional && (
          <a 
            href={links.additional} 
            class="project-card__link project-card__link--additional"
            aria-label={`View additional resources for ${title} project`}
            target="_blank"
            rel="noopener noreferrer"
            tabindex="-1"
          >
            <svg class="project-card__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true" focusable="false">
              <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
              <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
            </svg>
          </a>
        )}
      </div>
    </div>
  </div>
  
  <div class="project-card__content">
    <h3 id={`project-title-${title.replace(/\s+/g, '-').toLowerCase()}`} class="project-card__title">{title}</h3>
    <p class="project-card__description">{description}</p>
    
    <div class="project-card__technologies" role="list" aria-label="Technologies used">
      {technologies.map((tech) => (
        <span class="project-card__tech-tag" role="listitem">{tech}</span>
      ))}
    </div>
  </div>
  
  <!-- Project Tooltip -->
  <ProjectTooltip 
    title={title}
    description={description}
    technologies={technologies}
    featured={featured}
  />
</article>

<style>
  .project-card {
    background: var(--color-white);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-base);
    overflow: hidden;
    transition: all var(--transition-base);
    position: relative;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  
  .project-card[data-featured="true"] {
    border: 2px solid var(--color-primary);
  }
  
  .project-card[data-featured="true"]::before {
    content: "Featured";
    position: absolute;
    top: var(--space-3);
    right: var(--space-3);
    background: var(--color-primary);
    color: var(--color-white);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-base);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-semibold);
    z-index: 10;
  }
  
  .project-card__thumbnail {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: var(--color-gray-100);
  }
  
  .project-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base) ease-out;
    will-change: transform;
  }
  
  .project-card:hover .project-card__image {
    transform: scale3d(1.05, 1.05, 1);
  }
  
  .project-card__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.6) 50%,
      rgba(0, 0, 0, 0.8) 100%
    );
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: all var(--transition-base) ease-out;
    will-change: opacity, visibility;
    backdrop-filter: blur(2px);
  }
  
  .project-card:hover .project-card__overlay {
    opacity: 1;
    visibility: visible;
  }
  
  .project-card__corner-links {
    position: absolute;
    top: var(--space-3);
    right: var(--space-3);
    display: flex;
    gap: var(--space-2);
    z-index: 3;
  }
  
  .project-card__link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.95);
    color: var(--color-gray-700);
    border-radius: var(--radius-full);
    transition: all var(--transition-fast) ease-out;
    text-decoration: none;
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    will-change: transform, background-color;
    transform: translateZ(0);
  }
  
  .project-card__link:hover {
    background: var(--color-primary);
    color: var(--color-white);
    transform: scale3d(1.1, 1.1, 1) translateZ(0);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
  }
  
  .project-card__link--main {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border-radius: 0;
    background: transparent;
    backdrop-filter: none;
    border: none;
    z-index: 1;
  }
  
  .project-card__link--main:hover {
    background: transparent;
    transform: none;
    box-shadow: none;
  }
  
  .project-card__link--github,
  .project-card__link--additional {
    position: relative;
    z-index: 2;
    opacity: 0;
    transform: translateY(-8px) scale(0.8);
    transition: all var(--transition-base) ease-out;
  }
  
  .project-card:hover .project-card__link--github,
  .project-card:hover .project-card__link--additional {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
  
  .project-card:hover .project-card__link--github {
    transition-delay: 0.1s;
  }
  
  .project-card:hover .project-card__link--additional {
    transition-delay: 0.15s;
  }
  
  .project-card__icon {
    width: 20px;
    height: 20px;
  }
  
  .project-card__content {
    padding: var(--space-6);
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .project-card__title {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-semibold);
    color: var(--color-gray-900);
    margin-bottom: var(--space-3);
    line-height: var(--line-height-tight);
  }
  
  .project-card__description {
    color: var(--color-gray-600);
    font-size: var(--font-size-sm);
    line-height: var(--line-height-relaxed);
    margin-bottom: var(--space-4);
    flex: 1;
  }
  
  .project-card__technologies {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-top: auto;
  }
  
  .project-card__tech-tag {
    background: var(--color-gray-100);
    color: var(--color-gray-700);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
    transition: all var(--transition-fast);
  }
  
  .project-card:hover .project-card__tech-tag {
    background: var(--color-primary-light);
    color: var(--color-primary-dark);
  }
  
  /* Mobile Touch Interactions */
  @media (hover: none) and (pointer: coarse) {
    .project-card {
      cursor: pointer;
    }
    
    .project-card__overlay {
      opacity: 0;
      visibility: hidden;
      background: linear-gradient(
        135deg,
        rgba(0, 0, 0, 0.8) 0%,
        rgba(0, 0, 0, 0.6) 50%,
        rgba(0, 0, 0, 0.8) 100%
      );
      transition: all var(--transition-base) ease-out;
    }
    
    .project-card.touch-active .project-card__overlay {
      opacity: 1;
      visibility: visible;
    }
    
    .project-card__link--github,
    .project-card__link--additional {
      opacity: 0;
      transform: translateY(-8px) scale(0.8);
      transition: all var(--transition-base) ease-out;
    }
    
    .project-card.touch-active .project-card__link--github,
    .project-card.touch-active .project-card__link--additional {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
    
    .project-card.touch-active .project-card__link--github {
      transition-delay: 0.1s;
    }
    
    .project-card.touch-active .project-card__link--additional {
      transition-delay: 0.15s;
    }
    
    .project-card__link {
      width: 48px;
      height: 48px;
      background: rgba(255, 255, 255, 0.95);
      min-height: 44px; /* Minimum touch target size */
      min-width: 44px;
    }
    
    .project-card__link:active {
      transform: scale3d(0.95, 0.95, 1) translateZ(0);
      background: var(--color-primary);
      color: var(--color-white);
    }
    
    /* Touch feedback for the entire card */
    .project-card:active {
      transform: scale3d(0.98, 0.98, 1);
    }
    
    .project-card.touch-active:active {
      transform: scale3d(0.98, 0.98, 1) translateY(-2px);
    }
  }
  
  /* Responsive Design */
  @media (max-width: 640px) {
    .project-card__content {
      padding: var(--space-4);
    }
    
    .project-card__title {
      font-size: var(--font-size-lg);
    }
    
    .project-card__corner-links {
      gap: var(--space-2);
    }
    
    .project-card__link {
      width: 40px;
      height: 40px;
    }
    
    .project-card__icon {
      width: 16px;
      height: 16px;
    }
    
    .project-card[data-featured="true"]::before {
      top: var(--space-2);
      right: var(--space-2);
      font-size: 0.625rem;
      padding: 0.125rem var(--space-1);
    }
  }
  
  /* Screen reader only content */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* Focus States for Accessibility */
  .project-card:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .project-card__link:focus {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  .project-card:focus .project-card__overlay {
    opacity: 1;
    visibility: visible;
  }

  .project-card:focus .project-card__link--github,
  .project-card:focus .project-card__link--additional {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
  
  /* High Contrast Mode Support */
  @media (prefers-contrast: high) {
    .project-card {
      border: 2px solid var(--color-gray-900);
    }
    
    .project-card__overlay {
      background: rgba(0, 0, 0, 0.9);
    }
    
    .project-card__tech-tag {
      border: 1px solid var(--color-gray-700);
    }
  }
  
  /* Reduced Motion Support */
  @media (prefers-reduced-motion: reduce) {
    .project-card,
    .project-card__image,
    .project-card__overlay,
    .project-card__link,
    .project-card__tech-tag {
      transition: none;
    }
    
    .project-card:hover {
      transform: none;
    }
    
    .project-card:hover .project-card__image {
      transform: none;
    }
    
    .project-card__link:hover {
      transform: none;
    }
  }
</style>

<script>
  class ProjectTooltipManager {
    constructor() {
      this.tooltips = new Map();
      this.showDelay = 300;
      this.hideDelay = 100;
      this.isTouchDevice = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
      this.init();
    }

    init() {
      // Wait for DOM to be ready
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => this.setupTooltips());
      } else {
        this.setupTooltips();
      }
    }

    setupTooltips() {
      const projectCards = document.querySelectorAll('.project-card');
      
      projectCards.forEach((card) => {
        const tooltip = card.querySelector('.project-tooltip');
        if (!tooltip) return;

        const tooltipData = {
          element: tooltip,
          card: card,
          showTimeout: null,
          hideTimeout: null,
          isVisible: false,
          touchActive: false,
          touchStartTime: 0
        };

        this.tooltips.set(card, tooltipData);

        if (this.isTouchDevice) {
          // Touch event listeners for mobile
          card.addEventListener('touchstart', (e) => this.handleTouchStart(e, tooltipData), { passive: true });
          card.addEventListener('touchend', (e) => this.handleTouchEnd(e, tooltipData), { passive: false });
          card.addEventListener('touchcancel', (e) => this.handleTouchCancel(e, tooltipData));
          
          // Prevent context menu on long press for better UX
          card.addEventListener('contextmenu', (e) => {
            if (tooltipData.touchActive) {
              e.preventDefault();
            }
          });
        } else {
          // Mouse event listeners for desktop
          card.addEventListener('mouseenter', (e) => this.handleMouseEnter(e, tooltipData));
          card.addEventListener('mouseleave', (e) => this.handleMouseLeave(e, tooltipData));
          card.addEventListener('mousemove', (e) => this.handleMouseMove(e, tooltipData));
        }
        
        // Handle focus for accessibility (both touch and mouse)
        card.addEventListener('focusin', (e) => this.handleFocusIn(e, tooltipData));
        card.addEventListener('focusout', (e) => this.handleFocusOut(e, tooltipData));
        
        // Handle keyboard navigation
        card.addEventListener('keydown', (e) => this.handleKeydown(e, tooltipData));
      });
    }

    // Touch event handlers
    handleTouchStart(event, tooltipData) {
      tooltipData.touchStartTime = Date.now();
      
      // If card is not active, activate it on first touch
      if (!tooltipData.touchActive) {
        tooltipData.touchActive = true;
        tooltipData.card.classList.add('touch-active');
        
        // Show tooltip immediately on touch
        this.showTooltip(tooltipData, event);
        
        // Prevent default to avoid triggering hover states
        event.preventDefault();
      }
    }

    handleTouchEnd(event, tooltipData) {
      const touchDuration = Date.now() - tooltipData.touchStartTime;
      const target = event.target;
      
      // If touch was very short (tap), handle link navigation
      if (touchDuration < 200) {
        // Check if the tap was on a link
        const link = target.closest('.project-card__link');
        if (link && link.href) {
          // Allow the link to be followed
          window.open(link.href, link.target || '_blank');
        } else if (target.closest('.project-card__link--main')) {
          // Handle main link
          const mainLink = tooltipData.card.querySelector('.project-card__link--main');
          if (mainLink && mainLink.href) {
            window.open(mainLink.href, mainLink.target || '_blank');
          }
        }
      }
      
      // Set timeout to deactivate touch state
      setTimeout(() => {
        if (tooltipData.touchActive) {
          tooltipData.touchActive = false;
          tooltipData.card.classList.remove('touch-active');
          this.hideTooltip(tooltipData);
        }
      }, 3000); // Keep active for 3 seconds after touch
    }

    handleTouchCancel(event, tooltipData) {
      tooltipData.touchActive = false;
      tooltipData.card.classList.remove('touch-active');
      this.hideTooltip(tooltipData);
    }

    handleMouseEnter(event, tooltipData) {
      // Clear any existing hide timeout
      if (tooltipData.hideTimeout) {
        clearTimeout(tooltipData.hideTimeout);
        tooltipData.hideTimeout = null;
      }

      // Set show timeout
      tooltipData.showTimeout = setTimeout(() => {
        this.showTooltip(tooltipData, event);
      }, this.showDelay);
    }

    handleMouseLeave(event, tooltipData) {
      // Clear show timeout
      if (tooltipData.showTimeout) {
        clearTimeout(tooltipData.showTimeout);
        tooltipData.showTimeout = null;
      }

      // Set hide timeout
      tooltipData.hideTimeout = setTimeout(() => {
        this.hideTooltip(tooltipData);
      }, this.hideDelay);
    }

    handleMouseMove(event, tooltipData) {
      if (tooltipData.isVisible) {
        this.positionTooltip(tooltipData, event);
      }
    }

    handleFocusIn(event, tooltipData) {
      // Show tooltip immediately on focus for accessibility
      this.showTooltip(tooltipData, event);
    }

    handleFocusOut(event, tooltipData) {
      // Hide tooltip when focus leaves the card
      if (!tooltipData.card.contains(event.relatedTarget)) {
        this.hideTooltip(tooltipData);
      }
    }

    handleKeydown(event, tooltipData) {
      const { card } = tooltipData;
      
      switch (event.key) {
        case 'Enter':
        case ' ':
          event.preventDefault();
          // Activate the main link if available
          const mainLink = card.querySelector('.project-card__link--main');
          if (mainLink && mainLink.href) {
            window.open(mainLink.href, mainLink.target || '_blank');
          }
          break;
          
        case 'g':
        case 'G':
          event.preventDefault();
          // Activate GitHub link if available
          const githubLink = card.querySelector('.project-card__link--github');
          if (githubLink && githubLink.href) {
            window.open(githubLink.href, githubLink.target || '_blank');
          }
          break;
          
        case 'l':
        case 'L':
          event.preventDefault();
          // Activate additional link if available
          const additionalLink = card.querySelector('.project-card__link--additional');
          if (additionalLink && additionalLink.href) {
            window.open(additionalLink.href, additionalLink.target || '_blank');
          }
          break;
          
        case 'Escape':
          event.preventDefault();
          // Remove focus from the card
          card.blur();
          break;
      }
    }

    showTooltip(tooltipData, event) {
      const { element, card } = tooltipData;
      
      // Position the tooltip
      this.positionTooltip(tooltipData, event);
      
      // Show the tooltip
      element.classList.add('show');
      element.setAttribute('aria-hidden', 'false');
      tooltipData.isVisible = true;

      // Clear any pending timeouts
      if (tooltipData.showTimeout) {
        clearTimeout(tooltipData.showTimeout);
        tooltipData.showTimeout = null;
      }
    }

    hideTooltip(tooltipData) {
      const { element } = tooltipData;
      
      element.classList.remove('show');
      element.setAttribute('aria-hidden', 'true');
      tooltipData.isVisible = false;

      // Clear any pending timeouts
      if (tooltipData.hideTimeout) {
        clearTimeout(tooltipData.hideTimeout);
        tooltipData.hideTimeout = null;
      }
    }

    positionTooltip(tooltipData, event) {
      const { element, card } = tooltipData;
      const cardRect = card.getBoundingClientRect();
      const tooltipRect = element.getBoundingClientRect();
      const viewportWidth = window.innerWidth;
      const viewportHeight = window.innerHeight;
      const scrollX = window.pageXOffset;
      const scrollY = window.pageYOffset;

      // Default positioning - above the card
      let placement = 'top';
      let left = cardRect.left + scrollX + (cardRect.width / 2) - (tooltipRect.width / 2);
      let top = cardRect.top + scrollY - tooltipRect.height - 12;

      // Check if tooltip fits above the card
      if (top < scrollY + 20) {
        // Position below the card
        placement = 'bottom';
        top = cardRect.bottom + scrollY + 12;
      }

      // Check if tooltip fits below the card (if we switched to bottom)
      if (placement === 'bottom' && top + tooltipRect.height > scrollY + viewportHeight - 20) {
        // Try positioning to the side
        if (cardRect.left + scrollX > tooltipRect.width + 20) {
          // Position to the left
          placement = 'left';
          left = cardRect.left + scrollX - tooltipRect.width - 12;
          top = cardRect.top + scrollY + (cardRect.height / 2) - (tooltipRect.height / 2);
        } else if (cardRect.right + scrollX + tooltipRect.width + 20 < viewportWidth) {
          // Position to the right
          placement = 'right';
          left = cardRect.right + scrollX + 12;
          top = cardRect.top + scrollY + (cardRect.height / 2) - (tooltipRect.height / 2);
        } else {
          // Keep it above, but adjust if needed
          placement = 'top';
          top = cardRect.top + scrollY - tooltipRect.height - 12;
        }
      }

      // Ensure tooltip doesn't go off screen horizontally
      if (left < scrollX + 20) {
        left = scrollX + 20;
      } else if (left + tooltipRect.width > scrollX + viewportWidth - 20) {
        left = scrollX + viewportWidth - tooltipRect.width - 20;
      }

      // Ensure tooltip doesn't go off screen vertically
      if (top < scrollY + 20) {
        top = scrollY + 20;
      } else if (top + tooltipRect.height > scrollY + viewportHeight - 20) {
        top = scrollY + viewportHeight - tooltipRect.height - 20;
      }

      // Apply positioning
      element.style.left = `${left}px`;
      element.style.top = `${top}px`;
      element.setAttribute('data-placement', placement);
    }

    // Clean up method
    destroy() {
      this.tooltips.forEach((tooltipData) => {
        if (tooltipData.showTimeout) clearTimeout(tooltipData.showTimeout);
        if (tooltipData.hideTimeout) clearTimeout(tooltipData.hideTimeout);
      });
      this.tooltips.clear();
    }
  }

  // Initialize tooltip manager
  const tooltipManager = new ProjectTooltipManager();

  // Clean up on page unload
  window.addEventListener('beforeunload', () => {
    tooltipManager.destroy();
  });
</script>