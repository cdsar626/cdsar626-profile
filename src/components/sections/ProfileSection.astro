---
import { Image } from 'astro:assets';
import profileImage from '../../assets/images/profile/profile-placeholder.svg';
import CVViewer from '../ui/CVViewer.vue';

export interface Props {
  name?: string;
  role?: string;
  profileImageSrc?: string;
  profileImageAlt?: string;
}

const {
  name = "Cesar De la Vega",
  role = "Software Developer / Fullstack",
  profileImageSrc,
  profileImageAlt = "Profile photo - Cesar De la Vega"
} = Astro.props;

// Image handling is done conditionally in the template
---

<section class="profile-section" aria-labelledby="profile-heading">
  <div class="profile-container">
    <div class="profile-image-wrapper">
      {profileImageSrc ? (
        <img
          src={profileImageSrc}
          alt={profileImageAlt}
          width={280}
          height={280}
          class="profile-image"
          loading="eager"
          decoding="async"
          sizes="(max-width: 480px) 120px, (max-width: 640px) 150px, (max-width: 768px) 200px, (max-width: 1024px) 240px, 280px"
        />
      ) : (
        <Image
          src={profileImage}
          alt={profileImageAlt}
          width={280}
          height={280}
          class="profile-image"
          loading="eager"
          decoding="async"
          sizes="(max-width: 480px) 120px, (max-width: 640px) 150px, (max-width: 768px) 200px, (max-width: 1024px) 240px, 280px"
          widths={[120, 150, 200, 240, 280, 560]}
          format="webp"
        />
      )}
    </div>
    <div class="profile-info">
      <h1 id="profile-heading" class="profile-name">{name}</h1>
      <p class="profile-role" aria-describedby="profile-heading">{role}</p>
      <div class="profile-actions">
        <button 
          id="cv-button"
          class="cv-button"
          type="button"
          aria-label="View CV document"
          onclick="window.open('https://linkedin.com/in/cdsar626', '_blank', 'noopener,noreferrer')"
        >
          <svg class="cv-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          View LinkedIn
        </button>
      </div>
    </div>
  </div>

  <!-- CV Viewer Component -->
  <CVViewer 
    client:only="vue"
    defaultCvPath={`${import.meta.env.BASE_URL.replace(/\/$/, "")}/cv/Cesar_De_la_Vega_Salinas_-_Full_Stack_Developer.pdf`}
  />
</section>

<script>
  // CV Button functionality
  document.addEventListener('DOMContentLoaded', () => {
    const cvButton = document.getElementById('cv-button');
    
    if (cvButton) {
      cvButton.addEventListener('click', (event) => {
        // Prevent default button behavior and page scrolling
        event.preventDefault();
        event.stopPropagation();
        
        console.log('CV button clicked, dispatching event...');
        
        // Dispatch a custom event that the Vue component can listen to
        const customEvent = new CustomEvent('open-cv-viewer', {
          detail: { open: true }
        });
        document.dispatchEvent(customEvent);
        
        console.log('CV viewer event dispatched');
      });
    }
  });
</script>

<style>
  .profile-section {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: var(--space-section) var(--space-container);
    min-height: 50vh;
    background: linear-gradient(135deg, var(--color-gray-50) 0%, var(--color-gray-100) 100%);
  }

  .profile-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 600px;
    width: 100%;
    opacity: 0;
    transform: translateY(2rem);
    animation: profileFadeIn 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.2s forwards;
    will-change: transform, opacity;
  }

  .profile-image-wrapper {
    position: relative;
    margin-bottom: var(--space-8);
    opacity: 0;
    transform: scale(0.8);
    animation: profileImageFadeIn 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55) 0.4s forwards;
    will-change: transform, opacity;
  }

  .profile-image {
    width: 200px;
    height: 200px;
    border-radius: var(--radius-full);
    border: 4px solid #ffffff;
    box-shadow: var(--shadow-xl);
    transition: transform var(--transition-base), box-shadow var(--transition-base);
    object-fit: cover;
    background: var(--color-gray-200);
  }

  .profile-image:hover {
    transform: scale(1.05);
    box-shadow: var(--shadow-2xl);
  }

  .profile-info {
    opacity: 0;
    transform: translateY(1rem);
    animation: profileInfoFadeIn 0.6s ease-out 0.6s forwards;
  }

  .profile-name {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-extrabold);
    color: var(--color-gray-900);
    margin-bottom: var(--space-3);
    line-height: var(--line-height-tight);
    letter-spacing: -0.025em;
  }

  .profile-role {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-medium);
    color: var(--color-gray-700);
    margin-bottom: var(--space-6);
    line-height: var(--line-height-relaxed);
  }

  .profile-actions {
    opacity: 0;
    transform: translateY(1rem);
    animation: profileActionsFadeIn 0.6s ease-out 0.8s forwards;
  }

  .cv-button {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    background: var(--color-primary, #3b82f6);
    color: white;
    border: none;
    border-radius: var(--radius-lg);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    cursor: pointer;
    transition: all var(--transition-base);
    box-shadow: var(--shadow-md);
    text-decoration: none;
  }

  .cv-button:hover {
    background: var(--color-primary-dark, #2563eb);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .cv-button:focus {
    outline: 2px solid var(--color-primary, #3b82f6);
    outline-offset: 2px;
  }

  .cv-button:active {
    transform: translateY(0);
    box-shadow: var(--shadow-md);
  }

  .cv-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  /* Animations */
  @keyframes profileFadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes profileImageFadeIn {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes profileInfoFadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes profileActionsFadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive Design */
  @media (max-width: 640px) {
    .profile-section {
      padding: var(--space-16) var(--space-4);
      min-height: 40vh;
    }

    .profile-image {
      width: 150px;
      height: 150px;
    }

    .profile-image-wrapper {
      margin-bottom: var(--space-6);
    }

    .profile-name {
      font-size: var(--font-size-3xl);
    }

    .profile-role {
      font-size: var(--font-size-lg);
    }
  }

  @media (max-width: 480px) {
    .profile-section {
      padding: var(--space-12) var(--space-4);
    }

    .profile-image {
      width: 120px;
      height: 120px;
    }

    .profile-name {
      font-size: var(--font-size-2xl);
    }

    .profile-role {
      font-size: var(--font-size-base);
    }

    .cv-button {
      padding: var(--space-2) var(--space-4);
      font-size: var(--font-size-sm);
    }

    .cv-icon {
      width: 16px;
      height: 16px;
    }
  }

  /* Tablet and larger screens */
  @media (min-width: 768px) {
    .profile-section {
      min-height: 60vh;
    }

    .profile-image {
      width: 240px;
      height: 240px;
    }

    .profile-name {
      font-size: var(--font-size-5xl);
    }

    .profile-role {
      font-size: var(--font-size-2xl);
    }
  }

  /* Large desktop screens */
  @media (min-width: 1024px) {
    .profile-section {
      min-height: 70vh;
    }

    .profile-image {
      width: 280px;
      height: 280px;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .profile-container,
    .profile-image-wrapper,
    .profile-info,
    .profile-actions {
      animation: none;
      opacity: 1;
      transform: none;
    }

    .profile-image,
    .cv-button {
      transition: none;
    }

    .profile-image:hover,
    .cv-button:hover {
      transform: none;
    }
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .profile-image {
      border-color: var(--color-black);
      border-width: 2px;
    }

    .profile-name {
      color: var(--color-black);
    }

    .profile-role {
      color: var(--color-black);
    }
  }

  /* Dark mode adjustments handled by variables */
</style>