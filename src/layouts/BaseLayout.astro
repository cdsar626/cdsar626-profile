---
import Header from "../components/layout/Header.astro";
import HeaderScript from "../components/layout/HeaderScript.astro";
import PerformanceScript from "../components/layout/PerformanceScript.astro";
import TooltipSetup from "../components/ui/TooltipSetup.astro";
import ThemeToggle from "../components/ui/ThemeToggle.astro";

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  keywords?: string[];
  type?: "website" | "article" | "profile";
  author?: string;
  publishDate?: Date;
  modifiedDate?: Date;
  noindex?: boolean;
  nofollow?: boolean;
}

const {
  title = "cdsar626 Portfolio - Full Stack Developer",
  description = "Modern portfolio showcasing full-stack development projects and expertise in React, Vue.js, Node.js, and modern web technologies",
  image = "/images/profile/linkedin-avatar.jpg",
  keywords = [
    "developer",
    "portfolio",
    "full-stack",
    "web development",
    "software engineer",
    "Vue.js",
    "Node.js",
    "Rust",
    "Flutter",
  ],
  type = "website",
  author = "Cesar De la Vega",
  publishDate,
  modifiedDate,
  noindex = false,
  nofollow = false,
} = Astro.props;

const canonicalURL = Astro.site
  ? new URL(Astro.url.pathname, Astro.site)
  : Astro.url;
const fullImageURL = Astro.site ? new URL(image, Astro.site) : image;

// SEO Configuration
const siteConfig = {
  name: "Cesar De la Vega - Portfolio",
  url: Astro.site?.toString() || Astro.url.origin,
  author: {
    name: author,
    email: "cdsar626@gmail.com",
    url: canonicalURL.toString(),
  },
  social: {
    github: "https://github.com/cdsar626",
    linkedin: "https://linkedin.com/in/cdsar626",
    twitter: "@cdsar626",
  },
};
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Basic Meta Tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords.join(", ")} />
    <meta name="author" content={author} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Robots Meta Tags -->
    {
      noindex || nofollow ? (
        <meta
          name="robots"
          content={`${noindex ? "noindex" : "index"}${noindex && nofollow ? "," : ""}${nofollow ? "nofollow" : ""}`}
        />
      ) : (
        <meta name="robots" content="index,follow" />
      )
    }
    <meta
      name="googlebot"
      content="index,follow,max-snippet:-1,max-image-preview:large,max-video-preview:-1"
    />

    <!-- Language and Locale -->
    <meta name="language" content="en-US" />
    <meta property="og:locale" content="en_US" />

    <!-- Publication Dates -->
    {
      publishDate && (
        <meta
          name="article:published_time"
          content={publishDate.toISOString()}
        />
      )
    }
    {
      modifiedDate && (
        <meta
          name="article:modified_time"
          content={modifiedDate.toISOString()}
        />
      )
    }

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={`${title} - Portfolio Preview`} />
    <meta property="og:site_name" content={siteConfig.name} />
    {author && <meta property="og:article:author" content={author} />}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content={siteConfig.social.twitter} />
    <meta name="twitter:creator" content={siteConfig.social.twitter} />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullImageURL} />
    <meta name="twitter:image:alt" content={`${title} - Portfolio Preview`} />

    <!-- Additional SEO Meta Tags -->
    <meta name="format-detection" content="telephone=no" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <meta name="apple-mobile-web-app-title" content={siteConfig.name} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Preload Critical Assets -->
    <link
      rel="preload"
      href="/fonts/inter-var.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- Preload critical images -->
    <link
      rel="preload"
      as="image"
      href="/assets/images/profile/profile-placeholder.svg"
    />

    <!-- DNS Prefetch for External Resources -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com" />

    <!-- Preconnect to critical domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Resource hints for better performance -->
    <link rel="prefetch" href="/favicon.svg" />

    <!-- Module preload for critical JavaScript -->
    <link rel="modulepreload" href="/src/components/ui/CVViewer.vue" />

    <!-- Critical CSS - Inline above-the-fold styles -->
    <style>
      /* Critical CSS for initial render */
      /* Variables are defined in global.css which defaults to Dark Mode */
      
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        font-family: var(--font-family-sans);
        -webkit-font-smoothing: antialiased;
        scroll-behavior: smooth;
      }

      body {
        background-color: var(--color-gray-50);
        color: var(--color-gray-900);
        min-height: 100vh;
        overflow-x: hidden;
      }

      .main-content {
        padding-top: 80px;
      }

      /* Critical profile section styles */
      .profile-section {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: var(--space-8);
        min-height: 50vh;
        background: linear-gradient(
          135deg,
          var(--color-gray-50) 0%,
          var(--color-gray-100) 100%
        );
      }

      .profile-image {
        width: 200px;
        height: 200px;
        border-radius: var(--radius-full);
        border: 4px solid var(--color-gray-800); /* Use a variable that contrasts */
        box-shadow: var(--shadow-xl);
        object-fit: cover;
        background: var(--color-gray-100);
      }

      @media (max-width: 640px) {
        .main-content {
          padding-top: 64px;
        }
        .profile-image {
          width: 150px;
          height: 150px;
        }
      }
    </style>

    <!-- Theme Color -->
    <meta name="theme-color" content="#1f2937" />

    <!-- Structured Data -->
    <script
      type="application/ld+json"
      is:inline
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Person",
        name: siteConfig.author.name,
        jobTitle: "Full Stack Software Developer",
        description: description,
        url: siteConfig.url,
        email: siteConfig.author.email,
        image: fullImageURL.toString(),
        sameAs: [
          siteConfig.social.github,
          siteConfig.social.linkedin,
          siteConfig.social.twitter,
        ],
        knowsAbout: [
          "JavaScript",
          "TypeScript",
          "React",
          "Vue.js",
          "Node.js",
          "Full Stack Development",
          "Web Development",
          "Software Engineering",
        ],
        hasOccupation: {
          "@type": "Occupation",
          name: "Software Developer",
          occupationLocation: {
            "@type": "Place",
            name: "Remote",
          },
          skills: [
            "JavaScript",
            "TypeScript",
            "React",
            "Vue.js",
            "Node.js",
            "HTML",
            "CSS",
            "Git",
            "Agile Development",
          ],
        },
        alumniOf: {
          "@type": "EducationalOrganization",
          name: "Computer Science Education",
        },
      })}
    />

    <!-- Website Structured Data -->
    <script
      type="application/ld+json"
      is:inline
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "WebSite",
        name: siteConfig.name,
        url: siteConfig.url,
        description: description,
        author: {
          "@type": "Person",
          name: siteConfig.author.name,
          url: siteConfig.author.url,
        },
        inLanguage: "en-US",
        copyrightYear: "2024",
        copyrightHolder: {
          "@type": "Person",
          name: siteConfig.author.name,
        },
      })}
    />

    <!-- Portfolio/Creative Work Structured Data -->
    <script
      type="application/ld+json"
      is:inline
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "CreativeWork",
        name: "Developer Portfolio",
        description:
          "A showcase of full-stack development projects and technical expertise",
        author: {
          "@type": "Person",
          name: siteConfig.author.name,
          jobTitle: "Full Stack Software Developer",
        },
        dateCreated: "2024-01-01",
        dateModified: modifiedDate
          ? modifiedDate.toISOString().split("T")[0]
          : new Date().toISOString().split("T")[0],
        keywords: keywords.join(", "),
        genre: "Portfolio",
        inLanguage: "en-US",
      })}
    />
  </head>
  <body>
    <ThemeToggle />
    <Header />
    <div id="main-content" class="main-content page-transition">
      <slot />
    </div>
    <HeaderScript />
    <PerformanceScript />

    <!-- Page Transition and Animation Enhancement Script -->
    <script>
      // @ts-nocheck
      class PageAnimationManager {
        constructor() {
          this.isReducedMotion = window.matchMedia(
            "(prefers-reduced-motion: reduce)",
          ).matches;
          this.init();
        }

        init() {
          // Initialize page entrance animation
          this.initPageTransitions();

          // Initialize intersection observer for scroll-triggered animations
          this.initScrollAnimations();

          // Initialize loading state management
          this.initLoadingStates();

          // Listen for reduced motion preference changes
          this.initReducedMotionListener();
        }

        initPageTransitions() {
          if (this.isReducedMotion) return;

          const mainContent = document.getElementById("main-content");
          if (mainContent) {
            // Add GPU acceleration for smooth animations
            mainContent.classList.add("gpu-accelerated");

            // Ensure page transition animation plays
            mainContent.style.willChange = "opacity, transform";

            // Clean up will-change after animation
            setTimeout(() => {
              mainContent.style.willChange = "auto";
            }, 500);
          }
        }

        initScrollAnimations() {
          if (this.isReducedMotion) return;

          // Create intersection observer for scroll-triggered animations
          const observerOptions = {
            root: null,
            rootMargin: "0px 0px -100px 0px",
            threshold: 0.1,
          };

          const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                const element = entry.target;

                // Add stagger animation class if it has data-stagger attribute
                if (element.hasAttribute("data-stagger")) {
                  const delay = element.getAttribute("data-stagger") || "0";
                  element.style.animationDelay = `${delay}s`;
                }

                // Add animation class
                element.classList.add("animate-in");

                // Optimize for hardware acceleration
                element.style.willChange = "transform, opacity";

                // Clean up will-change after animation
                setTimeout(() => {
                  element.style.willChange = "auto";
                }, 1000);

                // Stop observing this element
                observer.unobserve(element);
              }
            });
          }, observerOptions);

          // Observe elements that should animate on scroll
          const animateElements = document.querySelectorAll(
            "[data-animate-on-scroll]",
          );
          animateElements.forEach((el) => observer.observe(el));
        }

        initLoadingStates() {
          // Handle image loading states
          const images = document.querySelectorAll('img[loading="lazy"]');
          images.forEach((img) => {
            if (!img.complete) {
              img.classList.add("loading-shimmer");

              img.addEventListener(
                "load",
                () => {
                  img.classList.remove("loading-shimmer");
                  if (!this.isReducedMotion) {
                    img.classList.add("fade-in");
                  }
                },
                { once: true },
              );

              img.addEventListener(
                "error",
                () => {
                  img.classList.remove("loading-shimmer");
                },
                { once: true },
              );
            }
          });
        }

        initReducedMotionListener() {
          const mediaQuery = window.matchMedia(
            "(prefers-reduced-motion: reduce)",
          );
          mediaQuery.addEventListener("change", (e) => {
            this.isReducedMotion = e.matches;

            if (this.isReducedMotion) {
              // Remove all animations if reduced motion is preferred
              document.body.classList.add("reduce-motion");
            } else {
              document.body.classList.remove("reduce-motion");
            }
          });
        }
      }

      // Initialize animation manager when DOM is ready
      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", () => {
          new PageAnimationManager();
        });
      } else {
        new PageAnimationManager();
      }
    </script>

    <!-- Enhanced Tooltip Setup with Tippy.js -->
    <TooltipSetup />
  </body>
</html>

<style>
  /* Enhanced page transition styles */
  .main-content {
    opacity: 0;
    transform: translateY(20px);
    animation: pageEnter 0.5s ease-out 0.1s forwards;
  }

  /* Scroll-triggered animation styles */
  [data-animate-on-scroll] {
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.6s ease-out,
      transform 0.6s ease-out;
  }

  [data-animate-on-scroll].animate-in {
    opacity: 1;
    transform: translateY(0);
  }

  /* Loading shimmer effect for images */
  img.loading-shimmer {
    background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
    background-size: 200px 100%;
    animation: shimmer 2s infinite;
    min-height: 200px;
  }

  /* Custom Tippy.js Theme - Card */
  .tippy-box[data-theme~="card"] {
    background: var(--color-bg-surface) !important;
    border: 1px solid var(--color-gray-200) !important;
    border-radius: 16px !important;
    box-shadow:
      0 20px 60px rgba(0, 0, 0, 0.12),
      0 8px 25px rgba(0, 0, 0, 0.08) !important;
    backdrop-filter: blur(20px) !important;
    font-family:
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      sans-serif !important;
    font-size: 14px !important;
    line-height: 1.5 !important;
    padding: 0 !important;
    max-width: 320px !important;
    min-width: 280px !important;
    transform: translateY(-4px) !important;
  }

  .tippy-box[data-theme~="card"] .tippy-content {
    padding: 20px !important;
    background: var(--color-bg-surface) !important;
    border-radius: 16px !important;
  }

  .tippy-box[data-theme~="card"] .tippy-arrow {
    color: var(--color-bg-surface);
  }

  .tippy-box[data-theme~="card"] .tippy-arrow::before {
    border-color: var(--color-gray-200);
  }

  /* Tooltip content styles */
  .tooltip-content {
    position: relative;
  }

  .tooltip-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .tooltip-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-gray-900);
    line-height: 1.25;
    margin: 0;
    flex: 1;
  }

  .tooltip-badge {
    background: #3b82f6;
    color: #ffffff;
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
    font-weight: 600;
    white-space: nowrap;
    flex-shrink: 0;
  }

  /* Tooltip card styles */
  .tooltip-card {
    position: relative;
  }

  .tooltip-description {
    color: var(--color-gray-700);
    font-size: 0.875rem;
    line-height: 1.625;
    margin: 0 0 0.75rem 0;
    text-align: left;
  }

  .tooltip-technologies {
    border-top: 1px solid var(--color-gray-200);
    padding-top: 0.75rem;
    margin-top: 0.75rem;
  }

  .tooltip-tech-label {
    display: block;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-gray-500);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }

  .tooltip-tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
  }

  .tooltip-tech-tag {
    background: var(--color-gray-100);
    color: var(--color-gray-700);
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
    transition: all 0.15s ease-in-out;
  }

  /* Dark mode support handled by variables */

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .tippy-box[data-theme~="portfolio"] {
      border: 2px solid var(--color-gray-900);
      box-shadow: var(--shadow-2xl);
    }

    .tooltip-tech-tag {
      border: 1px solid var(--color-gray-900);
    }
  }

  /* Mobile responsive adjustments for tooltips */
  @media (max-width: 640px) {
    .tippy-box[data-theme~="portfolio"] {
      max-width: calc(100vw - 40px);
      min-width: 280px;
    }

    .tooltip-title {
      font-size: var(--font-size-base);
    }

    .tooltip-description {
      font-size: var(--font-size-xs);
      margin-bottom: var(--space-3);
    }

    .tooltip-tech-tag {
      font-size: 0.625rem;
      padding: 0.125rem var(--space-2);
    }

    .tooltip-header {
      margin-bottom: var(--space-2);
    }

    .tooltip-technologies {
      padding-top: var(--space-2);
    }
  }

  /* Very small screens */
  @media (max-width: 480px) {
    .tippy-box[data-theme~="portfolio"] {
      max-width: calc(100vw - 20px);
      min-width: 260px;
    }

    .tooltip-title {
      font-size: var(--font-size-sm);
    }

    .tooltip-description {
      font-size: 0.75rem;
      line-height: 1.4;
    }

    .tooltip-tech-list {
      gap: 0.25rem;
    }

    .tooltip-tech-tag {
      font-size: 0.625rem;
      padding: 0.125rem var(--space-2);
    }
  }

  /* Reduced motion override */
  .reduce-motion *,
  .reduce-motion *::before,
  .reduce-motion *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }

  .reduce-motion .main-content {
    opacity: 1;
    transform: none;
    animation: none;
  }

  @media (prefers-reduced-motion: reduce) {
    .main-content {
      opacity: 1;
      transform: none;
      animation: none;
    }

    [data-animate-on-scroll] {
      opacity: 1;
      transform: none;
      transition: none;
    }

    img.loading-shimmer {
      animation: none;
      background: #f0f0f0;
    }

    /* Disable tooltip animations for reduced motion */
    .tippy-box[data-theme~="portfolio"] {
      transition: none !important;
    }
  }
</style>
