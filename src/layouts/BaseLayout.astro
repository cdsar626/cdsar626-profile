    </div>
    <HeaderScript />
    <PerformanceScript />
    
    <!-- Page Transition and Animation Enhancement Script -->
    <script>
      // @ts-nocheck
      class PageAnimationManager {
        constructor() {
          this.isReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
          this.init();
        }

        init() {
          // Initialize page entrance animation
          this.initPageTransitions();
          
          // Initialize intersection observer for scroll-triggered animations
          this.initScrollAnimations();
          
          // Initialize loading state management
          this.initLoadingStates();
          
          // Listen for reduced motion preference changes
          this.initReducedMotionListener();
        }

        initPageTransitions() {
          if (this.isReducedMotion) return;
          
          const mainContent = document.getElementById('main-content');
          if (mainContent) {
            // Add GPU acceleration for smooth animations
            mainContent.classList.add('gpu-accelerated');
            
            // Ensure page transition animation plays
            mainContent.style.willChange = 'opacity, transform';
            
            // Clean up will-change after animation
            setTimeout(() => {
              mainContent.style.willChange = 'auto';
            }, 500);
          }
        }

        initScrollAnimations() {
          if (this.isReducedMotion) return;
          
          // Create intersection observer for scroll-triggered animations
          const observerOptions = {
            root: null,
            rootMargin: '0px 0px -100px 0px',
            threshold: 0.1
          };

          const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                const element = entry.target;
                
                // Add stagger animation class if it has data-stagger attribute
                if (element.hasAttribute('data-stagger')) {
                  const delay = element.getAttribute('data-stagger') || '0';
                  element.style.animationDelay = `${delay}s`;
                }
                
                // Add animation class
                element.classList.add('animate-in');
                
                // Optimize for hardware acceleration
                element.style.willChange = 'transform, opacity';
                
                // Clean up will-change after animation
                setTimeout(() => {
                  element.style.willChange = 'auto';
                }, 1000);
                
                // Stop observing this element
                observer.unobserve(element);
              }
            });
          }, observerOptions);

          // Observe elements that should animate on scroll
          const animateElements = document.querySelectorAll('[data-animate-on-scroll]');
          animateElements.forEach((el) => observer.observe(el));
        }

        initLoadingStates() {
          // Handle image loading states
          const images = document.querySelectorAll('img[loading="lazy"]');
          images.forEach((img) => {
            if (!img.complete) {
              img.classList.add('loading-shimmer');
              
              img.addEventListener('load', () => {
                img.classList.remove('loading-shimmer');
                if (!this.isReducedMotion) {
                  img.classList.add('fade-in');
                }
              }, { once: true });
              
              img.addEventListener('error', () => {
                img.classList.remove('loading-shimmer');
              }, { once: true });
            }
          });
        }

        initReducedMotionListener() {
          const mediaQuery = window.matchMedia('(prefers-reduced-motion: reduce)');
          mediaQuery.addEventListener('change', (e) => {
            this.isReducedMotion = e.matches;
            
            if (this.isReducedMotion) {
              // Remove all animations if reduced motion is preferred
              document.body.classList.add('reduce-motion');
            } else {
              document.body.classList.remove('reduce-motion');
            }
          });
        }
      }

      // Initialize animation manager when DOM is ready
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => {
          new PageAnimationManager();
        });
      } else {
        new PageAnimationManager();
      }
    </script>
    
        
        <!-- Enhanced Tooltip Setup with Tippy.js -->
        <script>
          // @ts-nocheck
          import tippy, {followCursor} from 'tippy.js';
          document.addEventListener('DOMContentLoaded', () => {
            console.log('Setting up enhanced Tippy.js tooltips...');
            
            // Find all project cards
            const projectCards = document.querySelectorAll('.project-card');
            console.log(`Found ${projectCards.length} project cards`);
            
            if (projectCards.length === 0) {
              console.warn('No project cards found!');
              return;
            }
            
            projectCards.forEach((card, index) => {
              console.log(`Setting up tooltip for card ${index + 1}`);
              
              // Get tooltip data from the card
              const title = card.querySelector('.project-card__title')?.textContent || 'No Title';
              const description = card.querySelector('.project-tooltip__description')?.textContent || 'No description available';
              const techTags = Array.from(card.querySelectorAll('.project-tooltip__tech-tag')).map(tag => tag.textContent);
              const isFeatured = card.hasAttribute('data-featured') && card.getAttribute('data-featured') === 'true';
              
              console.log(`Card ${index + 1} data:`, { title, description, techTags, isFeatured });
              
              // Create enhanced tooltip content with proper styling
              const featuredBadge = isFeatured ? `<span class="tooltip-badge">Featured</span>` : '';
              const techTagsHtml = techTags.length > 0 
                ? techTags.map(tech => `<span class="tooltip-tech-tag">${tech}</span>`).join('')
                : '<span class="tooltip-tech-tag">No technologies specified</span>';
              
              const tooltipContent = `
                <div class="tooltip-content">
                  <div class="tooltip-header">
                    <h4 class="tooltip-title">${title}</h4>
                    ${featuredBadge}
                  </div>
                  <p class="tooltip-description">${description}</p>
                  <div class="tooltip-technologies">
                    <span class="tooltip-tech-label">Technologies:</span>
                    <div class="tooltip-tech-list">
                      ${techTagsHtml}
                    </div>
                  </div>
                </div>
              `;
              
              try {
                // Initialize Tippy.js tooltip with custom theme
                const instance = tippy(card, {
                  content: tooltipContent,
                  plugins: [followCursor],
                  allowHTML: true,
                  theme: 'portfolio',
                  followCursor: true,
                  animation: 'scale-subtle',
                  duration: [250, 200],
                  delay: [300, 150],
                  arrow: true,
                  interactive: false,
                  hideOnClick: true,
                  trigger: 'mouseenter focus',
                  zIndex: 1070,
                  maxWidth: 320,
                  offset: [0, 16],
                  placement: 'top',
                  onShow(instance) {
                    console.log('‚úÖ Showing tooltip for:', title);
                  },
                  onHide(instance) {
                    console.log('‚ùå Hiding tooltip for:', title);
                  },
                  onCreate(instance) {
                    console.log('üéØ Tooltip created for:', title);
                  }
                });
                
                console.log(`‚úÖ Tooltip initialized for card ${index + 1}:`, instance);
                
              } catch (error) {
                console.error(`‚ùå Error initializing tooltip for card ${index + 1}:`, error);
              }
            });
            
            console.log('üéâ Enhanced Tippy.js tooltips setup complete!');
          });
        </script>

    <style>
      /* Enhanced page transition styles */
      .main-content {
        opacity: 0;
        transform: translateY(20px);
        animation: pageEnter 0.5s ease-out 0.1s forwards;
      }
      
      /* Scroll-triggered animation styles */
      [data-animate-on-scroll] {
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
      }
      
      [data-animate-on-scroll].animate-in {
        opacity: 1;
        transform: translateY(0);
      }
      
      /* Loading shimmer effect for images */
      img.loading-shimmer {
        background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
        background-size: 200px 100%;
        animation: shimmer 2s infinite;
        min-height: 200px;
      }
      
      /* Custom Tippy.js Portfolio Theme */
      .tippy-box[data-theme~='portfolio'] {
        background: var(--color-white);
        border: 1px solid var(--color-gray-200);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-xl);
        backdrop-filter: blur(8px);
        font-family: var(--font-family-sans);
        font-size: var(--font-size-sm);
        line-height: var(--line-height-normal);
        padding: 0;
        max-width: 320px;
        min-width: 280px;
      }
      
      .tippy-box[data-theme~='portfolio'] .tippy-content {
        padding: var(--space-4);
      }
      
      .tippy-box[data-theme~='portfolio'] .tippy-arrow {
        color: var(--color-white);
      }
      
      .tippy-box[data-theme~='portfolio'] .tippy-arrow::before {
        border-color: var(--color-gray-200);
      }
      
      /* Tooltip content styles */
      .tooltip-content {
        position: relative;
      }
      
      .tooltip-header {
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        gap: var(--space-3);
        margin-bottom: var(--space-3);
      }
      
      .tooltip-title {
        font-size: var(--font-size-lg);
        font-weight: var(--font-weight-semibold);
        color: var(--color-gray-900);
        line-height: var(--line-height-tight);
        margin: 0;
        flex: 1;
      }
      
      .tooltip-badge {
        background: var(--color-primary);
        color: var(--color-white);
        padding: var(--space-1) var(--space-2);
        border-radius: var(--radius-base);
        font-size: var(--font-size-xs);
        font-weight: var(--font-weight-semibold);
        white-space: nowrap;
        flex-shrink: 0;
      }
      
      .tooltip-description {
        color: var(--color-gray-700);
        font-size: var(--font-size-sm);
        line-height: var(--line-height-relaxed);
        margin: 0 0 var(--space-4) 0;
      }
      
      .tooltip-technologies {
        border-top: 1px solid var(--color-gray-200);
        padding-top: var(--space-3);
      }
      
      .tooltip-tech-label {
        display: block;
        font-size: var(--font-size-xs);
        font-weight: var(--font-weight-semibold);
        color: var(--color-gray-600);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: var(--space-2);
      }
      
      .tooltip-tech-list {
        display: flex;
        flex-wrap: wrap;
        gap: var(--space-1);
      }
      
      .tooltip-tech-tag {
        background: var(--color-gray-100);
        color: var(--color-gray-700);
        padding: var(--space-1) var(--space-3);
        border-radius: var(--radius-full);
        font-size: var(--font-size-xs);
        font-weight: var(--font-weight-medium);
        transition: all var(--transition-fast);
      }
      
      /* Dark mode support for tooltips */
      @media (prefers-color-scheme: dark) {
        .tippy-box[data-theme~='portfolio'] {
          background: var(--color-gray-800);
          border-color: var(--color-gray-700);
        }
        
        .tippy-box[data-theme~='portfolio'] .tippy-arrow {
          color: var(--color-gray-800);
        }
        
        .tippy-box[data-theme~='portfolio'] .tippy-arrow::before {
          border-color: var(--color-gray-700);
        }
        
        .tooltip-title {
          color: var(--color-gray-100);
        }
        
        .tooltip-description {
          color: var(--color-gray-300);
        }
        
        .tooltip-tech-label {
          color: var(--color-gray-400);
        }
        
        .tooltip-tech-tag {
          background: var(--color-gray-700);
          color: var(--color-gray-200);
        }
        
        .tooltip-technologies {
          border-color: var(--color-gray-700);
        }
      }
      
      /* High contrast mode support */
      @media (prefers-contrast: high) {
        .tippy-box[data-theme~='portfolio'] {
          border: 2px solid var(--color-gray-900);
          box-shadow: var(--shadow-2xl);
        }
        
        .tooltip-tech-tag {
          border: 1px solid var(--color-gray-900);
        }
      }
      
      /* Mobile responsive adjustments for tooltips */
      @media (max-width: 640px) {
        .tippy-box[data-theme~='portfolio'] {
          max-width: calc(100vw - 40px);
          min-width: 280px;
        }
        
        .tooltip-title {
          font-size: var(--font-size-base);
        }
        
        .tooltip-description {
          font-size: var(--font-size-xs);
          margin-bottom: var(--space-3);
        }
        
        .tooltip-tech-tag {
          font-size: 0.625rem;
          padding: 0.125rem var(--space-2);
        }
        
        .tooltip-header {
          margin-bottom: var(--space-2);
        }
        
        .tooltip-technologies {
          padding-top: var(--space-2);
        }
      }
      
      /* Very small screens */
      @media (max-width: 480px) {
        .tippy-box[data-theme~='portfolio'] {
          max-width: calc(100vw - 20px);
          min-width: 260px;
        }
        
        .tooltip-title {
          font-size: var(--font-size-sm);
        }
        
        .tooltip-description {
          font-size: 0.75rem;
          line-height: 1.4;
        }
        
        .tooltip-tech-list {
          gap: 0.25rem;
        }
        
        .tooltip-tech-tag {
          font-size: 0.625rem;
          padding: 0.125rem var(--space-2);
        }
      }
      
      /* Reduced motion override */
      .reduce-motion *,
      .reduce-motion *::before,
      .reduce-motion *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
      }
      
      .reduce-motion .main-content {
        opacity: 1;
        transform: none;
        animation: none;
      }
      
      @media (prefers-reduced-motion: reduce) {
        .main-content {
          opacity: 1;
          transform: none;
          animation: none;
        }
        
        [data-animate-on-scroll] {
          opacity: 1;
          transform: none;
          transition: none;
        }
        
        img.loading-shimmer {
          animation: none;
          background: #f0f0f0;
        }
        
        /* Disable tooltip animations for reduced motion */
        .tippy-box[data-theme~='portfolio'] {
          transition: none !important;
        }
      }
    </style>
  </body>
</html>

