---
import Header from '../components/layout/Header.astro';
import HeaderScript from '../components/layout/HeaderScript.astro';
import PerformanceScript from '../components/layout/PerformanceScript.astro';
import 'tippy.js/dist/tippy.css';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  keywords?: string[];
  type?: 'website' | 'article' | 'profile';
  author?: string;
  publishDate?: Date;
  modifiedDate?: Date;
  noindex?: boolean;
  nofollow?: boolean;
}

const {
  title = "Portfolio - Full Stack Developer",
  description = "Modern portfolio showcasing full-stack development projects and expertise in React, Vue.js, Node.js, and modern web technologies",
  image = "/images/og-image.svg",
  keywords = ["developer", "portfolio", "full-stack", "web development", "software engineer", "React", "Vue.js", "Node.js", "TypeScript"],
  type = "website",
  author = "John Developer",
  publishDate,
  modifiedDate,
  noindex = false,
  nofollow = false
} = Astro.props;

const canonicalURL = Astro.site ? new URL(Astro.url.pathname, Astro.site) : Astro.url;
const fullImageURL = Astro.site ? new URL(image, Astro.site) : image;

// SEO Configuration
const siteConfig = {
  name: "John Developer - Portfolio",
  url: Astro.site?.toString() || Astro.url.origin,
  author: {
    name: author,
    email: "john@example.com",
    url: canonicalURL.toString()
  },
  social: {
    github: "https://github.com/johndeveloper",
    linkedin: "https://linkedin.com/in/johndeveloper",
    twitter: "@johndeveloper"
  }
};
