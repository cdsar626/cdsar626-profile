---
import Header from '../components/layout/Header.astro';
import HeaderScript from '../components/layout/HeaderScript.astro';
import PerformanceScript from '../components/layout/PerformanceScript.astro';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  keywords?: string[];
}

const {
  title = "Portfolio - Full Stack Developer",
  description = "Modern portfolio showcasing full-stack development projects and expertise",
  image = "/favicon.svg",
  keywords = ["developer", "portfolio", "full-stack", "web development", "software engineer"]
} = Astro.props;

const canonicalURL = Astro.site ? new URL(Astro.url.pathname, Astro.site) : Astro.url;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Basic Meta Tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords.join(", ")} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={Astro.site ? new URL(image, Astro.site) : image} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={Astro.site ? new URL(image, Astro.site) : image} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Preload Critical Assets -->
    <link rel="preload" href="/fonts/inter-var.woff2" as="font" type="font/woff2" crossorigin />
    
    <!-- Preload critical images -->
    <link rel="preload" as="image" href="/assets/images/profile/profile-placeholder.svg" />
    
    <!-- DNS Prefetch for External Resources -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com" />
    
    <!-- Preconnect to critical domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Resource hints for better performance -->
    <link rel="prefetch" href="/favicon.svg" />
    
    <!-- Module preload for critical JavaScript -->
    <link rel="modulepreload" href="/src/components/ui/CVViewer.vue" />
    
    <!-- Critical CSS - Inline above-the-fold styles -->
    <style>
      /* Critical CSS for initial render */
      :root {
        --color-primary: #3b82f6;
        --color-gray-50: #f9fafb;
        --color-gray-100: #f3f4f6;
        --color-gray-900: #111827;
        --color-white: #ffffff;
        --font-family-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        --space-4: 1rem;
        --space-8: 2rem;
        --transition-base: 250ms ease-in-out;
        --radius-full: 9999px;
        --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
      }
      
      * { box-sizing: border-box; margin: 0; padding: 0; }
      
      html {
        font-family: var(--font-family-sans);
        -webkit-font-smoothing: antialiased;
        scroll-behavior: smooth;
      }
      
      body {
        background-color: var(--color-gray-50);
        color: var(--color-gray-900);
        min-height: 100vh;
        overflow-x: hidden;
      }
      
      .main-content {
        padding-top: 80px;
      }
      
      /* Critical profile section styles */
      .profile-section {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: var(--space-8);
        min-height: 50vh;
        background: linear-gradient(135deg, var(--color-gray-50) 0%, var(--color-gray-100) 100%);
      }
      
      .profile-image {
        width: 200px;
        height: 200px;
        border-radius: var(--radius-full);
        border: 4px solid var(--color-white);
        box-shadow: var(--shadow-xl);
        object-fit: cover;
        background: var(--color-gray-100);
      }
      
      @media (max-width: 640px) {
        .main-content { padding-top: 64px; }
        .profile-image { width: 150px; height: 150px; }
      }
    </style>
    
    <!-- Theme Color -->
    <meta name="theme-color" content="#1f2937" />
    
    <!-- Structured Data -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Full Stack Developer",
        "jobTitle": "Software Developer",
        "url": "{Astro.url}",
        "sameAs": []
      }
    </script>
  </head>
  <body>
    <Header />
    <div id="main-content" class="main-content page-transition">
      <slot />
    </div>
    <HeaderScript />
    <PerformanceScript />
    
    <!-- Page Transition and Animation Enhancement Script -->
    <script>
      // @ts-nocheck
      class PageAnimationManager {
        constructor() {
          this.isReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
          this.init();
        }

        init() {
          // Initialize page entrance animation
          this.initPageTransitions();
          
          // Initialize intersection observer for scroll-triggered animations
          this.initScrollAnimations();
          
          // Initialize loading state management
          this.initLoadingStates();
          
          // Listen for reduced motion preference changes
          this.initReducedMotionListener();
        }

        initPageTransitions() {
          if (this.isReducedMotion) return;
          
          const mainContent = document.getElementById('main-content');
          if (mainContent) {
            // Add GPU acceleration for smooth animations
            mainContent.classList.add('gpu-accelerated');
            
            // Ensure page transition animation plays
            mainContent.style.willChange = 'opacity, transform';
            
            // Clean up will-change after animation
            setTimeout(() => {
              mainContent.style.willChange = 'auto';
            }, 500);
          }
        }

        initScrollAnimations() {
          if (this.isReducedMotion) return;
          
          // Create intersection observer for scroll-triggered animations
          const observerOptions = {
            root: null,
            rootMargin: '0px 0px -100px 0px',
            threshold: 0.1
          };

          const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                const element = entry.target;
                
                // Add stagger animation class if it has data-stagger attribute
                if (element.hasAttribute('data-stagger')) {
                  const delay = element.getAttribute('data-stagger') || '0';
                  element.style.animationDelay = `${delay}s`;
                }
                
                // Add animation class
                element.classList.add('animate-in');
                
                // Optimize for hardware acceleration
                element.style.willChange = 'transform, opacity';
                
                // Clean up will-change after animation
                setTimeout(() => {
                  element.style.willChange = 'auto';
                }, 1000);
                
                // Stop observing this element
                observer.unobserve(element);
              }
            });
          }, observerOptions);

          // Observe elements that should animate on scroll
          const animateElements = document.querySelectorAll('[data-animate-on-scroll]');
          animateElements.forEach((el) => observer.observe(el));
        }

        initLoadingStates() {
          // Handle image loading states
          const images = document.querySelectorAll('img[loading="lazy"]');
          images.forEach((img) => {
            if (!img.complete) {
              img.classList.add('loading-shimmer');
              
              img.addEventListener('load', () => {
                img.classList.remove('loading-shimmer');
                if (!this.isReducedMotion) {
                  img.classList.add('fade-in');
                }
              }, { once: true });
              
              img.addEventListener('error', () => {
                img.classList.remove('loading-shimmer');
              }, { once: true });
            }
          });
        }

        initReducedMotionListener() {
          const mediaQuery = window.matchMedia('(prefers-reduced-motion: reduce)');
          mediaQuery.addEventListener('change', (e) => {
            this.isReducedMotion = e.matches;
            
            if (this.isReducedMotion) {
              // Remove all animations if reduced motion is preferred
              document.body.classList.add('reduce-motion');
            } else {
              document.body.classList.remove('reduce-motion');
            }
          });
        }
      }

      // Initialize animation manager when DOM is ready
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => {
          new PageAnimationManager();
        });
      } else {
        new PageAnimationManager();
      }
    </script>
    
    <style>
      /* Enhanced page transition styles */
      .main-content {
        opacity: 0;
        transform: translateY(20px);
        animation: pageEnter 0.5s ease-out 0.1s forwards;
      }
      
      /* Scroll-triggered animation styles */
      [data-animate-on-scroll] {
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.6s ease-out, transform 0.6s ease-out;
      }
      
      [data-animate-on-scroll].animate-in {
        opacity: 1;
        transform: translateY(0);
      }
      
      /* Loading shimmer effect for images */
      img.loading-shimmer {
        background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
        background-size: 200px 100%;
        animation: shimmer 2s infinite;
        min-height: 200px;
      }
      
      /* Reduced motion override */
      .reduce-motion *,
      .reduce-motion *::before,
      .reduce-motion *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
      }
      
      .reduce-motion .main-content {
        opacity: 1;
        transform: none;
        animation: none;
      }
      
      @media (prefers-reduced-motion: reduce) {
        .main-content {
          opacity: 1;
          transform: none;
          animation: none;
        }
        
        [data-animate-on-scroll] {
          opacity: 1;
          transform: none;
          transition: none;
        }
        
        img.loading-shimmer {
          animation: none;
          background: #f0f0f0;
        }
      }
    </style>
  </body>
</html>

